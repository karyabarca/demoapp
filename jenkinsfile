pipeline {
    agent any
    environment {
        DOCKER_CREDENTIALS_ID = 'docker-credentials' // Cambia esto al ID de tus credenciales Docker en Jenkins
        DOCKER_IMAGE = 'tu-repositorio-docker/demoapp' // Cambia esto a tu repositorio Docker
    }
    stages {
        stage('Build') {
            steps {
                script {
                    def customImage = docker.build("${DOCKER_IMAGE}:${env.BUILD_ID}")
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS_ID}") {
                        customImage.push()
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Aqu√≠ puedes agregar comandos para desplegar tu contenedor Docker en tu servidor
                    sh 'docker run -d -p 8000:8000 --name demoapp ${DOCKER_IMAGE}:${env.BUILD_ID}'
                }
            }
        }
    }
}
